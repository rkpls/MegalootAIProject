import tkinter as tk
from tkinter import ttk
from PIL import Image, ImageTk

# Constants for dropdown options
RARITY_OPTIONS = ['Common', 'Uncommon', 'Rare', 'Legendary', 'Mythic', 'Eternal', 'Abyssal', 'Cosmic', 'Divine']
CLASS_OPTIONS = ['Class1', 'Class2', 'Class3', '...']  # Extend this list based on your requirements
USAGE_OPTIONS = ['Use1', 'Use2', 'Use3', 'Use4', 'Use5', 'Use6', 'Use7']
STAT_TYPE_OPTIONS = ['Type1', 'Type2', 'Type3', 'Type4', 'Type5', 'Type6', 'Type7', 'Type8', 'Type9', 'Type10', 'Type11', 'Type12']
MULTIPLIER_OPTIONS = ['x1', 'x2', 'x3', '...']  # Extend this list based on your requirements

class ItemDataApp:
    def __init__(self, master):
        self.master = master
        master.title('Item Data Entry')
        
        # Configure dark mode style
        style = ttk.Style()
        style.theme_use('clam')  # Use 'clam' as base for dark mode
        style.configure('TLabel', background='#333333', foreground='white')
        style.configure('TEntry', background='#555555', foreground='white', insertbackground='white')  # Set cursor color
        style.configure('TCombobox', background='#555555', foreground='white')
        style.configure('TButton', background='#555555', foreground='white')
        master.configure(bg='#333333')  # Set background color of the root window

        # Image and ID
        self.img = Image.open("path_to_your_image.png").resize((26, 26))
        self.tkimg = ImageTk.PhotoImage(self.img)
        self.label_img = ttk.Label(master, image=self.tkimg)
        self.label_img.grid(row=0, column=1, columnspan=2)

        self.label_id = ttk.Label(master, text="Item ID: 001")
        self.label_id.grid(row=0, column=0)

        # Entry widgets
        self.entry_price = ttk.Entry(master)
        self.entry_price.grid(row=1, column=1)

        self.combo_rarity = ttk.Combobox(master, values=RARITY_OPTIONS)
        self.combo_rarity.grid(row=1, column=2)

        self.entry_gold_multiplier = ttk.Entry(master)
        self.entry_gold_multiplier.grid(row=1, column=3)

        self.entry_name = ttk.Entry(master)
        self.entry_name.grid(row=2, column=1)

        self.combo_class = ttk.Combobox(master, values=CLASS_OPTIONS)
        self.combo_class.grid(row=2, column=2)

        self.combo_usage = ttk.Combobox(master, values=USAGE_OPTIONS)
        self.combo_usage.grid(row=2, column=3)

        # Stat entries and multipliers
        self.entries_stats = []
        self.combos_stats = []
        for i in range(3):
            entry_stat = ttk.Entry(master)
            entry_stat.grid(row=3+i, column=1)
            self.entries_stats.append(entry_stat)

            combo_stat_type = ttk.Combobox(master, values=STAT_TYPE_OPTIONS)
            combo_stat_type.grid(row=3+i, column=2)
            self.combos_stats.append(combo_stat_type)

            combo_multiplier = ttk.Combobox(master, values=MULTIPLIER_OPTIONS)
            combo_multiplier.grid(row=3+i, column=3)
            self.combos_stats.append(combo_multiplier)

        # Submit button
        self.button_submit = ttk.Button(master, text="Submit", command=self.submit)
        self.button_submit.grid(row=6, column=1, columnspan=3)

    def submit(self):
        # You can process and validate data here
        print("Data Submitted")

if __name__ == "__main__":
    root = tk.Tk()
    app = ItemDataApp(root)
    root.mainloop()
